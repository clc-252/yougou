/* pages/cart/index.wxss */
.user_address{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.user_tel text{
  margin-left: 20rpx;
  font-family: consolas;
  color: #999;
}
.address_info{
  padding: 20rpx;
}
.address image{
  height: 15rpx;
  border-bottom: 20rpx solid #f4f4f4;
}

/* 店铺名 */
.shop-name{
  padding: 0 20rpx 20rpx;
  border-bottom: 1px solid #ddd;
}
.shop-name icon {
  margin-right: 5px;
  color: #999;
}

/* 商品列表 */
.goods-list{
  padding-bottom: 100rpx;
}
.goods-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
  font-size: 14px;
}
.goods-list image{
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx;
}
.goods-item-info{
  flex: 1;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.goods-other{
  display: flex;
  justify-content: space-between;
}
.goods-price{
  font-size: 16px;
  color: #eb4450;
}
.goods-price text {
  font-size: 12px;
}
.goods-num{
  display: flex;
  justify-content: space-around;
}
.goods-num  view{
  width: 50rpx;
  height: 40rpx;
  border:2px solid #666;
  text-align: center;
  line-height: 40rpx;
}
.goods-num input {
  width: 80rpx;
  text-align: center;
}

/* 底部全选和结算部分 */
.checkout{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  font-size: 14px;
  background-color: #fff;
  z-index: 2;
}
.checkall{
  width: 30%;
}
.checkall icon {
  margin: 0 20rpx;
  vertical-align: middle;
}
.sum .sum-price{
  color: #eb4450;
  font-size: 16px;
}
.sum .sum-price text{
  font-size: 12px;
}
.freight{
  font-size: 12px;
  color: #a4a3a4;
}
.buy-btn{
  width: 230rpx;
  height: 100%;
  background-color: #eb4450;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}