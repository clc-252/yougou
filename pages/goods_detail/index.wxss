/* pages/goods_detail/index.wxss */

/* 轮播图 */

.swiper {
  width: 750rpx;
  height: 750rpx;
}

.swiper image {
  width: 750rpx;
  height: 750rpx;
}

/* 商品价格 */
.price{
  padding: 20rpx 0;
  color: #eb4450;
  font-size: 22px;
}

/* 商品信息 */
.info_wrapper{
  padding:0 20rpx; 
}
.goods_info{
  display: flex;
  justify-content: space-between;
}
.goods_title{
  flex: 1;
  line-height: 23px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.goods_star{
  width: 130rpx;
  margin-left: 40rpx;
  text-align: center;
  border-left: 1px solid #ddd;
  color: #999;
  padding-top: 14rpx;
  line-height: 22px;
}
.icon-shoucang{
  font-weight: 700;
  font-size: 18px;
}
.star_text{
  font-size: 14px;
}
/* 快递 */
.express{
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  color: #999;
  font-size: 14px;
}

/* 商品详细信息的tab栏 */
.tab{
  position: sticky;
  top: 0;
  border-top: 20rpx solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 14px;
  background-color: #fff;
}
.tab-item{
  width: 50%;
  text-align: center;
}
.active{
  color: #e93b3d;
}

/* 商品规格 */
.attrs{
  padding: 20rpx;
  font-size: 14px;
}
.attrs-item{
  line-height: 2;
}
.attrs-item text{
  margin-right: 20rpx;
}

/* 页脚的按钮 */
.btns{
  position: sticky;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  height: 98rpx;
  text-align: center;
  border-top: 1px solid #ddd;
  background-color: #fff;
}
.btn-left{
  width: 20%;
  color: #999;
  font-size: 12px;
}
.btn-right{
  width: 30%;
  color: #fff;
  line-height: 98rpx;
  font-size: 14px;
}
.cart{
  background-color: #f4b73f;
}
.buy{
  background-color: #eb4450;
}

/* 联系客服 */
.contact{
  position: absolute;
  width: 20%;
  height: 100%;
  left: 0;
  top: 0;
  overflow: hidden;
}
.contact button {
  height: 100%;
  background-color: transparent;
}

