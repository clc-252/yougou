<view class="container">
  <!-- 搜索组件 -->
  <navigator class="search">
    <view class="search_input">
      <icon type="search" size="20" />
      <text>{{keyword}}</text>
    </view>
  </navigator>
  <!-- tab栏 -->
  <view class="tab">
    <view wx:for="{{['综合','销量','价格']}}" wx:key="index" bindtap="handleClick" data-index="{{index}}" class="{{current===index?'active':''}}">{{item}}
    <text class="iconfont icon-paixu" wx:if="{{index===2}}"></text></view>
  </view>
  <!-- 商品列表 -->
  <view class="list">
  <block wx:for="{{goodsList}}" wx:key="index">
    <navigator class="list_item">
      <!-- 图片 -->
      <image src="{{item.goods_small_logo}}"></image>
      <!-- 右侧商品信息 -->
      <view class="list_item_right">
        <view class="goods_title">{{item.goods_name}}</view>
        <view class="price">
          <text>￥</text>{{item.goods_price}}
        </view>
      </view>
    </navigator>
  </block>
  </view>
</view>