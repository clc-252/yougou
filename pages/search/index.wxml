<view class="container">
  <!-- 搜索栏 -->
  <view class="search-wrapper">
    <view class="search">
      <icon type="search" size="20" />
      <!-- bindinput：监听用户输入 -->
      <input placeholder="请输入你想要的商品" value="{{inputValue}}" bindinput="handleInput"></input>
    </view>
    <view class="cancel-btn" wx:if="{{inputValue}}" bindtap="handleCancel">取消</view>

    <!-- 搜索建议列表 -->
    <view class="recommend" wx:if="{{recommend.length}}">
      <navigator url="" wx:for="{{recommend}}" wx:key="index">{{item.goods_name}}</navigator>
    </view>
  </view>

  <!-- 历史搜索 -->
  <view class="history">
    <view class="history-title">
      <view class="title">历史搜索</view>
      <icon type="clear" size="20"></icon>
    </view>
    <view class="history-list">
      <view class="history-item">小米</view>
      <view class="history-item">小米12</view>
      <view class="history-item">小米123</view>
      <view class="history-item">小米12</view>
      <view class="history-item">小米12345</view>
    </view>
  </view>
</view>
